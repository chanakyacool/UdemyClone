
<% @category.sub_categories.each do |sub_category| %>
    <%= sub_category.name %>
    <%= link_to 'Edit', edit_category_sub_category_path(@category, sub_category), class: "btn btn-link" %>
    <%= link_to 'Delete', category_sub_category_path(@category, sub_category),
          method: :delete,
          data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
  <br />
<% end %>
