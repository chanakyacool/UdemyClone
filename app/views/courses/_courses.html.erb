<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

  <% @courses.each do |course| %>
    <tr>
      <td><%= course.title %></td>
      <td><%= course.description %></td>
      <td><%= link_to 'Show', course_path(course) %></td>

      <td><%= link_to 'Edit', edit_course_path(course) %></td>
      <td><%= link_to 'Destroy', course_path(course),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
