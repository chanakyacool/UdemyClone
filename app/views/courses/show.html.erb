<% if @course.youtube_url != "" %>
  <%= embed(@course.youtube_url) %>
<% else %>
  <%= image_tag @course.image_url(:full).to_s %>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

  <% if current_user == @course.user %>
  <%# if @course.user.id == current_user.id %>
    <%#= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-link" %>

    <%= link_to 'Create Section', new_course_section_path(@course), class: "btn btn-default" %>

  <% end %>

<br />


<%= render 'sections/sections' %>
