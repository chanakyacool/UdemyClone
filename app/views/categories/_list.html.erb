
<% @categories.each do |category| %>
  <%= category.name %>
  <%= link_to 'View', category_path(category), class: "btn btn-link" %>
  <%= link_to 'Edit', edit_category_path(category), class: "btn btn-link" %>
    <%= link_to 'Delete', category_path(category),
          method: :delete,
          data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
  <br />
<% end %>

