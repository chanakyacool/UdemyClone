<% @section.lectures.each do |lecture| %>
    <em>Lecture: </em>
    <%= lecture.title %>

    <% if current_user == @course.user %>
      <%= link_to 'Edit', edit_course_section_lecture_path(@course, @section, lecture), class: "btn btn-link" %>
      <%= link_to 'Delete', [@course, @section, lecture],
                 method: :delete,
                 data: { confirm: 'Are you sure?', class: "btn btn-link" }
                  %>
    <br />
    <% end %>

    <br />
  <% end %>
