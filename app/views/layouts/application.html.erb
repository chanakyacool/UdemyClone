<!DOCTYPE html>
<html>
  <head>
    <title>UdemyClone</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
  </head>
  <body>
    <%= render 'layouts/navbar' %>
    <div class="container" >
      <div class="row" >
        <% if flash.count > 0 %>
          <div class="well well-sm">
            <% flash.each do |name, msg| %>
              <%= content_tag :div, msg, id: "flash_#{name}" %>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
